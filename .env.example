# Stock_RNN 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# ==================== Flask 配置 ====================
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False

# ==================== 数据库配置 ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-database-password
DB_NAME=quanttradingsystem

# 可选：直接设置完整的数据库连接字符串
# DATABASE_URL=mysql+pymysql://user:password@host:port/database?charset=utf8mb4

# ==================== 东方财富配置 ====================
# Cookie 用于访问东方财富 API
EASTMONEY_COOKIE=qgqp_b_id=your-cookie-id

# 基金数据 Cookie（更复杂，包含多个字段）
EASTMONEY_FUNDS_COOKIE=em_hq_fls=js; qgqp_b_id=your-cookie-id; your-other-cookies

# ==================== 雪球配置 ====================
# 雪球完整 Cookie 字符串
XUEQIU_COOKIES=device_id=your-device-id; xq_a_token=your-token; xq_id_token=your-jwt-token

# ==================== 下载配置（可选） ====================
SELENIUM_HEADLESS=True
USE_SELENIUM_FALLBACK=True
MAX_RETRIES=3
RETRY_DELAY=5
REQUEST_TIMEOUT=30

# ==================== SQLAlchemy 配置（可选） ====================
SQLALCHEMY_ECHO=False
